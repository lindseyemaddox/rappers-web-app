
h1
  color: $white
  font-size: 4em
  letter-spacing: .25em
  padding: 5vh 0
  position: relative
  primary-type($thin)
  text-align: center
  text-transform: uppercase

  &:before
    content: '(((((('
    font-size: 1.4em
    vertical-align: bottom

  &:after
    content: '))))))'
    font-size: 1.4em
    vertical-align: bottom

  @media screen and (max-width: 900px)
    font-size: 3em
    padding-top: 70px

  @media screen and (max-width: 600px)
    font-size: 2em

  @media screen and (max-width: 500px)
    &:before, &:after
      content: ''

  @media screen and (max-height: 900px)
    padding: 70px 0 5vh

.modal p
  color: $white
  font-size: 1.25em
  letter-spacing: -1px
  primary-type($light)
  text-align: left
  transition: all 400ms ease 100ms

  @media screen and (max-width: 1100px)
    font-size: 1em
    letter-spacing: 0.1px

  @media screen and (max-width: 900px)
    line-height: 1.25em

h3
  color: $white
  font-size: 2em
  letter-spacing: 2px
  padding-bottom: 20px
  primary-type($medium)
  line-height: 0.8em
  text-align: left
  text-transform: uppercase
  transition: all 400ms ease 400ms
  white-space: nowrap

h2
  bottom: 10px
  color: $white
  font-size: 3em
  letter-spacing: 2px
  opacity: 0
  position: absolute
  primary-type($medium)
  right: 0
  line-height: 0.8em
  text-align: left
  text-transform: uppercase
  transition: all 400ms ease 200ms
  white-space: nowrap
  z-index: 0

  @media screen and (max-width: 1100px)
    font-size: 2em

  @media screen and (max-width: 900px)
    font-size: 1.5em

  @media screen and (max-width: 700px)
    font-size: 1.25em
    text-align: right
    white-space: normal
