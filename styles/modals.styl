
@keyframes example
  from {opacity: 0}
  to {opacity:1}

.modal
  display: none
  position: absolute
  left: 0
  top: 0
  width: 100vw
  height: 100vh
  overflow: auto
  background-color: rgba($dark, 0.4)

.modal:target
  display: block
  // position: fixed
  z-index: 9999

.bio
  animation-name: example
  animation-duration: 500ms
  background-color: rgba($purple, 0.6)
  border: 1px solid $white
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
  margin: auto
  max-width: 400px
  padding: 60px
  position: relative
  outline: 0
  top: 20vh
  width: auto

.icon-close
  color: rgba($white, .7)
  font-size: 20px
  position: absolute
  right: 20px
  text-decoration: none
  top: 20px
  transition: color 400ms ease
  z-index: 99999

  &:hover
    color: $pink
    text-decoration: none
    cursor: pointer
