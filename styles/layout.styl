
.grid
  height: 100vh
  margin: 0 auto
  width: 90vw

h1
  color: $white
  font-size: 4em
  letter-spacing: .25em
  padding: 7vh 0 9vh
  primary-type($thin)
  text-align: center
  text-transform: uppercase

  &:before
    content: '(((((('
    font-size: 1.4em
    vertical-align: bottom

  &:after
    content: '))))))'
    font-size: 1.4em
    vertical-align: bottom

.wrapper
  text-align: center



.artist
  background-color: $blue
  display: inline-block
  width: 15vw
  height: 15vw
  margin: 0 1vw 0
  max-width: 250px
  position: relative
  vertical-align: top

  img
    filter: contrast(200%) grayscale(100%)
    opacity: 0.85
    transition: all 400ms ease
    width: 100%

  h2
    color: $white
    font-size: 2em
    letter-spacing: 2px
    position: absolute
    primary-type($medium)
    line-height: 0.9em
    text-align: left
    text-transform: uppercase
    transition: all 400ms ease

  .bio
    color: $white
    display: none
    font-size: 1.25em
    letter-spacing: -1px
    opacity: 0
    primary-type($light)
    text-align: left
    transition: all 400ms ease

  .icon-bio
    color: $pink
    font-size: 2em
    left: 10px
    opacity: 1
    position: absolute
    bottom: 10px
    transition: bottom 400ms ease

    &:after
      content: 'BIO'
      font-size: .5em
      margin: 0 0 0 -5px
      primary-type($black)
      vertical-align: bottom




  &.selected

    .icon-bio
      // animation: move 400ms cubic-bezier(.9,.03,.69,.22)
      color: $white
      // top: 100%

    .bio
      display: block
      margin-top: 100px
      opacity: 1



  &.selected,
  &:hover

    img
      filter: none
      opacity: 1

    h2
      opacity: 1



  @media screen and (min-width: 1600px)
    width: 250px
    height: 250px
