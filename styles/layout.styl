
body
  position: relative

.grid
  height: 100vh
  margin: 0 auto
  width: 100vw

h1
  color: $white
  font-size: 4em
  letter-spacing: .25em
  padding: 5vh 0
  position: relative
  primary-type($thin)
  text-align: center
  text-transform: uppercase

  &:before
    content: '(((((('
    font-size: 1.4em
    vertical-align: bottom

  &:after
    content: '))))))'
    font-size: 1.4em
    vertical-align: bottom

  @media screen and (max-width: 900px)
    font-size: 3em
    padding-top: 70px

  @media screen and (max-width: 600px)
    font-size: 2em

  @media screen and (max-width: 500px)
    &:before, &:after
      content: ''

  @media screen and (max-height: 900px)
    padding: 70px 0 5vh

#artists
  position: relative
  text-align: center

.wrapper
  margin: 0 auto
  width: 15vh

  @media screen and (max-width: 600px)
    margin: 0
    width: 50vw

.modal
  bottom: 0
  left: 16vh
  height: 100%
  left: 0
  opacity: 0
  position: absolute
  top: 0
  transition: all 400ms ease 200ms
  vertical-align: bottom
  width: 38vw

  @media screen and (max-width: 700px)
    width: 33vw

  h3
    display: none

.modal p
  color: $white
  font-size: 1.25em
  letter-spacing: -1px
  primary-type($light)
  text-align: left
  transition: all 400ms ease 100ms

  @media screen and (max-width: 1100px)
    font-size: 1em
    letter-spacing: 0.1px

  @media screen and (max-width: 900px)
    line-height: 1.25em

h3
  color: $white
  font-size: 2em
  letter-spacing: 2px
  padding-bottom: 20px
  primary-type($medium)
  line-height: 0.8em
  text-align: left
  text-transform: uppercase
  transition: all 400ms ease 400ms
  white-space: nowrap

.artist
  background-color: $blue
  display: block
  cursor: pointer
  height: 15vh
  position: relative
  width: 15vh

  @media screen and (max-width: 600px)
    height: auto
    max-width: 250px
    width: auto

  img
    filter: grayscale(100%)
    max-width: 250px
    opacity: 0.4
    transition: all 400ms ease
    width: 100%
    z-index: 1

  h2
    bottom: 10px
    color: $white
    font-size: 3em
    letter-spacing: 2px
    opacity: 0
    position: absolute
    primary-type($medium)
    right: 0
    line-height: 0.8em
    text-align: left
    text-transform: uppercase
    transition: all 400ms ease 200ms
    white-space: nowrap
    z-index: 0

    @media screen and (max-width: 1100px)
      font-size: 2em

    @media screen and (max-width: 900px)
      font-size: 1.5em

    @media screen and (max-width: 700px)
      font-size: 1.25em
      text-align: right
      white-space: normal

  .icon-bio
    background-color: rgba($blue, .3)
    color: $pink
    cursor: pointer
    font-size: 2em
    right: 0
    opacity: 0
    padding: 8px 8px 12px
    position: absolute
    bottom: 0
    transition: all 400ms ease 300ms

    &:after
      content: 'BIO'
      font-size: .5em
      margin: 0 0 0 -5px
      primary-type($black)
      vertical-align: bottom

  &.selected

    .modal
      left: 16vh
      opacity: 1

      @media screen and (max-width: 800px)
        left: 105%
        width: 100%

      @media screen and (max-width: 600px)
        padding-top: 70px

  &.selected,
  &:hover

    .icon-bio
      background-color: rgba($blue, 1)
      color: $white
      opacity: 1

      @media screen and (max-width: 700px)
        opacity: 0

    img
      filter: none
      opacity: 1
      z-index: 99999

    h2
      right: 16vh
      opacity: 1

      @media screen and (max-width: 800px)
        right: 105%

    @media screen and (max-width: 600px)
      h2
        display: none

      h3
        display: block
        font-size: 1.5em
        white-space: normal

      .modal
        left: inherit
        right: -90%
        width: 80%
