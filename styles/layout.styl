
body
  position: relative

.grid
  height: 100vh
  margin: 0 auto
  width: 100vw

#artists
  position: relative
  text-align: center

.wrapper
  margin: 0 auto
  width: 15vh

  @media screen and (max-width: 600px)
    margin: 0
    width: 50vw

.modal
  bottom: 0
  left: 16vh
  height: 100%
  left: 0
  opacity: 0
  position: absolute
  top: 0
  transition: all 400ms ease 200ms
  vertical-align: bottom
  width: 38vw

  @media screen and (max-width: 700px)
    width: 33vw

  h3
    display: none

.artist
  background-color: $blue
  display: block
  cursor: pointer
  height: 15vh
  position: relative
  width: 15vh

  @media screen and (max-width: 600px)
    height: auto
    max-width: 250px
    width: auto

  img
    filter: grayscale(100%)
    max-width: 250px
    opacity: 0.4
    transition: all 400ms ease
    width: 100%
    z-index: 1

  .icon-bio
    background-color: rgba($blue, .3)
    color: $pink
    cursor: pointer
    font-size: 2em
    right: 0
    opacity: 0
    padding: 8px 8px 12px
    position: absolute
    bottom: 0
    transition: all 400ms ease 300ms

    &:after
      content: 'BIO'
      font-size: .5em
      margin: 0 0 0 -5px
      primary-type($black)
      vertical-align: bottom

  &.selected

    .modal
      left: 16vh
      opacity: 1

      @media screen and (max-width: 800px)
        left: 105%
        width: 100%

      @media screen and (max-width: 600px)
        padding-top: 70px

  &.selected,
  &:hover

    .icon-bio
      background-color: rgba($blue, 1)
      color: $white
      opacity: 1

      @media screen and (max-width: 700px)
        opacity: 0

    img
      filter: none
      opacity: 1
      z-index: 99999

    h2
      right: 16vh
      opacity: 1

      @media screen and (max-width: 800px)
        right: 105%

    @media screen and (max-width: 600px)
      h2
        display: none

      h3
        display: block
        font-size: 1.5em
        white-space: normal

      .modal
        left: inherit
        right: -90%
        width: 80%
