
body
  position: relative

.grid
  height: 100vh
  margin: 0 auto
  width: 90vw

h1
  color: $white
  font-size: 4em
  letter-spacing: .25em
  padding: 5vh 0
  position: relative
  primary-type($thin)
  text-align: center
  text-transform: uppercase

  &:before
    content: '(((((('
    font-size: 1.4em
    vertical-align: bottom

  &:after
    content: '))))))'
    font-size: 1.4em
    vertical-align: bottom

#artists
  position: relative
  text-align: center

.wrapper
  margin: 0 auto
  width: 15vh

.modal
  bottom: 0
  left: 16vh
  height: 100%
  left: 0
  // left: 16vh
  opacity: 0
  position: absolute
  top: 0
  transition: all 400ms ease 200ms
  vertical-align: bottom
  width: 40vw

.modal p
  color: $white
  font-size: 1.25em
  letter-spacing: -1px
  primary-type($light)
  text-align: left
  transition: all 400ms ease 100ms

h3
  color: $white
  font-size: 2em
  letter-spacing: 2px
  padding-bottom: 20px
  primary-type($medium)
  line-height: 0.8em
  text-align: left
  text-transform: uppercase
  transition: all 400ms ease 400ms
  white-space: nowrap

.artist
  background-color: $blue
  display: block
  cursor: pointer
  height: 15vh
  position: relative
  width: 15vh
  // margin: 0 auto
  // position: relative
  // vertical-align: top

  img
    filter: grayscale(100%)
    // left: 0
    max-width: 250px
    opacity: 1
    // position: absolute
    transition: all 400ms ease
    width: 100%
    z-index: 1

  h2
    bottom: 10px
    color: $white
    font-size: 3em
    letter-spacing: 2px
    opacity: 0
    position: absolute
    primary-type($medium)
    right: 0
    line-height: 0.8em
    text-align: left
    text-transform: uppercase
    transition: all 400ms ease 200ms
    white-space: nowrap
    z-index: 0

  .icon-bio
    background-color: rgba($blue, .3)
    color: $pink
    cursor: pointer
    font-size: 2em
    right: 0
    opacity: 0
    padding: 8px 8px 12px
    position: absolute
    bottom: 0
    transition: all 400ms ease 300ms
    // z-index: 2

    &:after
      content: 'BIO'
      font-size: .5em
      margin: 0 0 0 -5px
      primary-type($black)
      vertical-align: bottom

  &.selected
    // top: 0

    .modal
      left: 16vh
      opacity: 1

  &.selected,
  &:hover

    .icon-bio
      // animation: move 500ms cubic-bezier(.9,.03,.69,.22)
      background-color: rgba($blue, 1)
      color: $white
      opacity: 1
      // z-index: 999999

    img
      filter: none
      opacity: 1
      z-index: 99999

    h2
      right: 16vh
      opacity: 1

  @media screen and (min-width: 1600px)
