
doctype html
html
  head
    block meta
      meta(title="Rap App")
      meta(name="viewport" content="width=device-width, initial-scale=1")
      link(rel="apple-touch-icon", sizes="180x180", href="images/apple-touch-icon.png")
      link(rel="icon", type="image/png", sizes="32x32", href="images/favicon-32x32.png")
      link(rel="icon", type="image/png", sizes="192x192", href="images/android-chrome-192x192.png")
      link(rel="icon", type="image/png", sizes="16x16", href="images/favicon-16x16.png")
      link(rel="manifest", href="images/site.webmanifest")
      link(rel="mask-icon", href="images/safari-pinned-tab.svg", color="#5bbad5")
      link(rel="shortcut icon", href="images/favicon.ico")
      meta(name="apple-mobile-web-app-title", content="Rap App")
      meta(name="application-name", content="Rap App")
      meta(name="msapplication-TileColor", content="#e309d3")
      meta(name="msapplication-config", content="images/browserconfig.xml")
      meta(name="theme-color", content="#ffffff")

    block styles
      link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Raleway:100,300,500,900")
      link(rel="stylesheet" type="text/css" href="styles/compiled.css")

  body

    .animate-color
      
    .grid
        
      section
                    
        .search
          .ui-widget
            label(for="tags") Search: 
            input#tags
          
        h1 Artists
        
        include views/artists

  footer
    
    block scripts
      script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
      script(type="text/javascript" src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
      script(type="text/javascript" src="scripts/main.js")
      script.
        $( function() {
          var availableTags = [
            "Kanye West",
            "Drake",
            "Kendrick Lamar",
            "Future",
            "J. Cole"
          ];
          $( "#tags" ).autocomplete({
            source: availableTags
          });
        } );
