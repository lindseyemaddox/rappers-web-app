    a.artist(data-name='drake' href='#drake')
      .icon-bio
      img(src='http://assets.aloompa.com.s3.amazonaws.com/rappers/Drake.jpeg' alt='drake')
      h2 Drake
      
      .modal#drake(data-name='drake')
